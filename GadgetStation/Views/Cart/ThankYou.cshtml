@{
    ViewData["Title"] = "Thank You";
}

<div class="container my-5">
    <!-- Thank You Section -->
    <div class="jumbotron text-center bg-success text-white rounded shadow-sm">
        <h1 class="display-3">Thank You for Your Order!</h1>
        <p class="lead">Your order has been successfully placed and will be processed shortly.</p>
        <hr class="my-4">
        <p>We are currently processing your order and will send you a confirmation email soon.</p>
    </div>

    <!-- Continue Shopping and More Options -->
    <div class="text-center mt-5">
        <p>We appreciate your business! Feel free to explore our other great products.</p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">Continue Shopping</a>
    </div>

    <!-- Contact Support Section -->
    <div class="text-center mt-5">
        <h5>Need Help?</h5>
        <p>If you have any questions or concerns, please feel free to <a href="/Contact" class="btn btn-link">contact our support team</a>.</p>
    </div>
</div>
