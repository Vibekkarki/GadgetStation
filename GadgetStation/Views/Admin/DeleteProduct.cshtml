@model GadgetStation.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container">
    <h1>Delete Product</h1>
    <h3>Are you sure you want to delete this product?</h3>
    <div>
        <strong>Name:</strong> @Model.Name
    </div>
    <div>
        <strong>Description:</strong> @Model.Description
    </div>
    <div>
        <strong>Price:</strong> @Model.Price.ToString("C")
    </div>
    <form asp-action="DeleteProduct" asp-route-id="@Model.ProductId" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("ManageProducts", "Admin")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
