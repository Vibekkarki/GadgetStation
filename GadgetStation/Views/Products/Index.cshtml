@model IEnumerable<GadgetStation.Models.Product>

@{
    ViewData["Title"] = "Product List";
}

<div class="container mt-5">
    <!-- Hero Section -->
    <div class="jumbotron text-center bg-primary text-white rounded shadow-sm">
        <h1 class="display-4">Explore Our Exclusive Gadgets</h1>
        <p class="lead">Find the latest and greatest electronics tailored for you.</p>
        <a href="@Url.Action("Index", "Home")" class="btn btn-light btn-lg">Back to Home</a>
    </div>

    <!-- Product Section -->
    <div class="py-4">
        <h2 class="text-center mb-4">Our Products</h2>
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                    <div class="card h-100 shadow-sm">
                        <!-- Product Image -->
                        <img class="card-img-top img-fluid" src="@Url.Content(product.ImageUrl)" alt="@product.Name" style="height: 200px; object-fit: cover;">

                        <!-- Product Details -->
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <p><strong>Price: $@product.Price</strong></p>

                            <!-- CTA Button -->
                            <a href="@Url.Action("Details", "Products", new { id = product.ProductId })" class="btn btn-outline-primary mt-auto">
                                <i class="fas fa-info-circle"></i> View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Features Section -->
    <div class="bg-light py-5 text-center rounded shadow-sm">
        <h2 class="text-primary">Why Shop With Us?</h2>
        <div class="row mt-4">
            <div class="col-md-4">
                <i class="fas fa-shipping-fast fa-3x text-primary"></i>
                <h4 class="mt-3">Fast Shipping</h4>
                <p>Get your gadgets delivered quickly and safely.</p>
            </div>
            <div class="col-md-4">
                <i class="fas fa-check-circle fa-3x text-primary"></i>
                <h4 class="mt-3">Top Quality</h4>
                <p>Only the best gadgets make it to our store.</p>
            </div>
            <div class="col-md-4">
                <i class="fas fa-lock fa-3x text-primary"></i>
                <h4 class="mt-3">Secure Payments</h4>
                <p>Your transactions are safe with us.</p>
            </div>
        </div>
    </div>
</div>
